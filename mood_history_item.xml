<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/surface_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical"
        android:background="@drawable/mood_item_background">

        <!-- Mood Emoji -->
        <TextView
            android:id="@+id/moodEmoji"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:text="ðŸ˜Š"
            android:textSize="28sp"
            android:gravity="center"
            android:background="@drawable/emoji_circle_background_enhanced"
            android:layout_marginEnd="20dp" />

        <!-- Mood Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/moodName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Happy"
                    android:textColor="@color/text_primary_light"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/moodTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2:30 PM"
                    android:textColor="@color/text_secondary_subtle"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/moodDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Had a great day at work!"
                android:textColor="@color/text_primary_light"
                android:textSize="15sp"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/moodDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dec 15, 2024"
                android:textColor="@color/text_secondary_subtle"
                android:textSize="13sp"
                android:layout_marginTop="6dp" />

        </LinearLayout>

        <!-- Delete Button -->
        <Button
            android:id="@+id/deleteMoodButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:text="Ã—"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/button_danger"
            android:layout_marginStart="12dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
