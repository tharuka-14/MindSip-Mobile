<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    tools:context=".MoodPageActivity">

    <!-- Scrollable Content Container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav">

        <!-- Main Content Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Simple Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How are you feeling today? 😊"
                android:textColor="@color/text_primary_light"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center" />

            <!-- Emoji Panel -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/surface_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select your mood"
                        android:textColor="@color/text_primary_light"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Emoji Grid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- First Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:id="@+id/emoji1"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:text="😢"
                                android:textSize="32sp"
                                android:gravity="center"
                                android:background="@drawable/emoji_selector_background"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_margin="4dp" />

                            <TextView
                                android:id="@+id/emoji2"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:text="😕"
                                android:textSize="32sp"
                                android:gravity="center"
                                android:background="@drawable/emoji_selector_background"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_margin="4dp" />

                            <TextView
                                android:id="@+id/emoji3"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:text="😐"
                                android:textSize="32sp"
                                android:gravity="center"
                                android:background="@drawable/emoji_selector_background"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_margin="4dp" />

                            <TextView
                                android:id="@+id/emoji4"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:text="🙂"
                                android:textSize="32sp"
                                android:gravity="center"
                                android:background="@drawable/emoji_selector_background"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_margin="4dp" />

                        </LinearLayout>

                        <!-- Second Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:id="@+id/emoji5"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:text="😊"
                                android:textSize="32sp"
                                android:gravity="center"
                                android:background="@drawable/emoji_selector_background"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_margin="4dp" />

                            <TextView
                                android:id="@+id/emoji6"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:text="😄"
                                android:textSize="32sp"
                                android:gravity="center"
                                android:background="@drawable/emoji_selector_background"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_margin="4dp" />

                            <TextView
                                android:id="@+id/emoji7"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:text="🤩"
                                android:textSize="32sp"
                                android:gravity="center"
                                android:background="@drawable/emoji_selector_background"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_margin="4dp" />

                            <TextView
                                android:id="@+id/emoji8"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:text="🥰"
                                android:textSize="32sp"
                                android:gravity="center"
                                android:background="@drawable/emoji_selector_background"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_margin="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Mood History -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📊 Your Mood History"
                android:textColor="@color/text_primary_light"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Mood History List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/moodHistoryRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/mood_history_item_simple" />

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/emptyStateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="😊"
                    android:textSize="48sp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No mood entries yet"
                    android:textColor="@color/text_primary_light"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select an emoji above to log your first mood"
                    android:textColor="@color/text_secondary_subtle"
                    android:textSize="14sp"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/nav_background"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="5">

            <!-- Home -->
            <LinearLayout
                android:id="@+id/nav_home_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/nav_home"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:srcCompat="@drawable/navhome" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="@color/text_primary_light"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Habits -->
            <LinearLayout
                android:id="@+id/nav_habits_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/nav_habits"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:srcCompat="@drawable/habbit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Habits"
                    android:textColor="@color/text_primary_light"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Hydration -->
            <LinearLayout
                android:id="@+id/nav_hydration_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/nav_hydration"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:srcCompat="@drawable/ic_hydration" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hydration"
                    android:textColor="@color/text_primary_light"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Mood -->
            <LinearLayout
                android:id="@+id/nav_mood_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/nav_mood"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:srcCompat="@drawable/mood" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mood"
                    android:textColor="@color/nav_icon_active"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Settings -->
            <LinearLayout
                android:id="@+id/nav_settings_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/nav_settings"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:srcCompat="@drawable/settings" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textColor="@color/text_primary_light"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>